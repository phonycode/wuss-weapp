<w-cell
 highlight
 isLink
 label="{{ label }}"
 catch:onClick="_handleClick"
 hover-stop-propagation="false"
>
	<view
	 slot="content"
	 class="wuss-class wuss-cell-picker"
	 hover-class="none"
	 hover-stop-propagation="false"
	>
		<view
		 class="wuss-cell-picker-text-view"
		 hover-class="none"
		 hover-stop-propagation="false"
		>
			{{ _currentText }}
		</view>
		<w-popup
		 maskCancel="{{ maskClosable }}"
		 visible="{{ _visible }}"
		 position="bottom"
		 width="100%"
		 padding="0"
		 height="320px"
		 zIndex="10000"
		 catch:onClose="_handleCancel"
		>
			<view
			 class="wuss-cell-picker-header"
			 hover-class="none"
			 hover-stop-propagation="false"
			>
				<view
				 class="wuss-cell-picker-header-hd"
				 hover-class="none"
				 hover-stop-propagation="false"
				 style="{{ cancelTextColor ? 'color:' + cancelTextColor + ';' : '' }}"
				 catchtap="_handleCancel"
				>
					{{ cancelText }}
				</view>
				<view
				 class="wuss-cell-picker-header-bd"
				 hover-class="none"
				 hover-stop-propagation="false"
				>
					{{ title }}
				</view>
				<view
				 class="wuss-cell-picker-header-ft"
				 hover-class="none"
				 hover-stop-propagation="false"
				 style="{{ confirmTextColor ? 'color:' + confirmTextColor + ';' : '' }}"
				 bindtap="_handleConfirm"
				>
					{{ confirmText }}
				</view>
			</view>
			<picker-view
			 value="{{ _currentValue }}"
       class="wuss-cell-picker-view"
       indicator-class="wuss-cell-picker-view-indicator"
       indicator-style="{{ indicatorStyle || '' }}"
			 bindchange="_handleChange"
			 bindpickstart="_handleTouchStart"
			 bindpickend="_handleTouchEnd"
			 wx:if="{{ _initPicker && _visible }}"
			>
				<block
				 wx:for="{{ _isLinkage ? _options : options }}"
				 wx:for-item="column"
				 wx:for-index="columnIdx"
				 wx:key="column"
				 wx:if="{{ !_isRadio }}"
				>
					<picker-view-column>
						<block
						 wx:for="{{ column }}"
						 wx:for-item="item"
						 wx:for-index="index"
						 wx:key="item"
						>
							<view class="wuss-cell-picker-view-item">
								{{ showValue ? item.value : item.key }}
							</view>
						</block>
					</picker-view-column>
				</block>
				<picker-view-column wx:if="{{ _isRadio }}">
					<block
					 wx:for="{{ options }}"
					 wx:for-item="item"
					 wx:for-index="index"
					 wx:key="item"
					>
						<view class="wuss-cell-picker-view-item">
							{{ showValue ? item.value : item.key }}
						</view>
					</block>
				</picker-view-column>
			</picker-view>
		</w-popup>
	</view>
</w-cell>