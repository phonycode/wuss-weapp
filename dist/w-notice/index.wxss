@import '../common/theme/global.wxss';

.wuss-notice {
  display: flex;
  padding: 18rpx 20rpx;
  font-size: 24rpx;
  line-height: 1.5;
  align-items: center;
}

.wuss-notice-icon {
  position: relative;
  padding-right: 60rpx;
}

.wuss-notice-voice {
  min-width: 40rpx;
  padding-top: 1rpx;
  box-sizing: border-box;
}

.wuss-notice-operation {
  position: absolute;
  display: flex;
  height: 100%;
  align-items: center;
  top: 0;
  right: 15rpx;
  line-height: 1;
}

.wuss-notice__content-wrap {
  position: relative;
  flex: 1;
  height: 36rpx;
  overflow: hidden;
}

.wuss-notice__content {
  position: absolute;
  white-space: nowrap;
}