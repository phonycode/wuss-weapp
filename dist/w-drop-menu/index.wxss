@import '../common/theme/global.wxss';

.wuss-drop-menu {
  position: relative;
}

.wuss-drop-menu-bar {
  position: relative;
  z-index: 1000;
  border-bottom: 1px solid #eeeeee;
  height: 44px;
  background: #ffffff;
  display: flex;
  flex: 1;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
}

.wuss-drop-menu-bar .bar-item {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.bar-item-text {
  position: relative;
  font-size: 15px;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  margin-right: 5px;
}

.bar-item-text.selected,
.opt-text-checked {
  color: #fe8b4a;
}

.arrow-down {
  transition: all 400ms cubic-bezier(0.075, 0.82, 0.165, 1);
  vertical-align: 6rpx;
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
}

.arrow-up {
  transition: all 400ms cubic-bezier(0.075, 0.82, 0.165, 1);
  vertical-align: middle;
  -webkit-transform: rotate(180deg);
  transform: rotate(180deg);
}

.sort {
  display: inline-block;
  width: 12px;
  height: 12px;
  vertical-align: middle;
}

.sort-default {
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: cover;
}

.sort-desc {
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: cover;
}

.sort-asc {
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: cover;
}

.animation-content {
  position: absolute;
  top: 0;
  margin-top: 44px;
  z-index: 100;
  width: 100%;
}

.wuss-drop-menu-content {
  position: relative;
  /* position: absolute; */
  /* top: 0; */
  /* left: 0; */
  width: 100%;
  z-index: 200;
  /* margin-top: 44px; */
}

.wuss-drop-menu-list {
  display: flex;
  flex: 1;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
}

.wuss-drop-menu-list .items {
  display: flex;
  flex: 1;
}

.wuss-drop-menu-list .items .opt-flex {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  flex-direction: row;
  border-bottom: 1px solid #eeeeee;
  background: #ffffff;
  padding: 8px 10px;
  font-size: 28rpx;
  color: #333333;
}

.wuss-drop-menu-list .items .opt-flex .opt-flex-cell .check-icon {
  display: inline-block;
  width: 20px;
  height: 20px;
  vertical-align: middle;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: cover;
}

.wuss-drop-menu-list .items:last-child {
  /* border-bottom: none; */
}

.w-cell-hd {
  min-height: 40px;
}

.wuss-drop-menu-scrollview {
  min-height: 200px;
  max-height: 350px;
  overflow: hidden;
}

.wuss-drop-menu-btn-group {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.w-button {
  margin: 0 !important;
  border-top: none !important;
}

.w-icon-filter {
  vertical-align: 3rpx;
}