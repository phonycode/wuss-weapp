<block 
  wx:if="{{ type === 'snake' && show }}"
  class="wuss-class {{ text ? 'flex-content' : ''}}"
>
  <view 
    class="wuss-activity-indicator animation-snake {{ animationClass }}" 
    style="{{ animationStyles }}"
  />
  <view 
    class="wuss-activity-indicator-text"
    wx:if="{{ text }}"
    style="{{ textStyle }}"
  >
    {{ text }}
  </view>
</block>


